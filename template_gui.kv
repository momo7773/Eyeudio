#:import utils kivy.utils
#:import WrappedLabel gui

#:set BLACK '#000000'
#:set BLUE '#003262'
#:set RED '#ED4E33'
#:set GREEN '#00A598'
#:set FOG '#DDD5C7'
#:set GRAY '#EEEEEE'
#:set YELLOW '#C4820E'
#:set SCROLLBAR '#C1C1C1'

<EyeudioGUI>
    BoxLayout:
        orientation: "horizontal"
        size: root.width, root.height

        GridLayout:
            spacing: 1
            canvas.before:
                Color:
                    rgba: 1,1,1,1
                Rectangle:
                    size: self.size
                    pos: self.pos
            cols: 4
            padding: [1,1,1,1]

            # First column: Info
            GridLayout:
                canvas.before:
                    Color:
                        rgba: 1,1,1,1
                    Rectangle:
                        size: self.size
                        pos: self.pos
                rows: 10 # Add more rows when adding widgets (Label, Button, etc.)
                size_hint_x: None
                width: 150
                Label:
                    canvas.before:
                        Color:
                            rgba: utils.get_color_from_hex(BLUE)
                        Rectangle:
                            size: self.size
                            pos: self.pos
                    text: "Info"
                    bold: True
                    font_size: 20
                    size_hint_y: None
                    height: 100
                Label:
                    canvas.before:
                        Color:
                            rgba: utils.get_color_from_hex(YELLOW)
                        Rectangle:
                            size: self.size
                            pos: self.pos
                    text: "System:"
                    font_size: 20
                    size_hint_y: None
                    height: 45
                Label:
                    canvas.before:
                        Color:
                            rgba: utils.get_color_from_hex(YELLOW)
                        Rectangle:
                            size: self.size
                            pos: self.pos
                    id: computer_info
                    text: ""
                    color: utils.get_color_from_hex(BLACK)
                    font_size: 15
                    size_hint_y: None
                    height: 30
                Label:
                    canvas.before:
                        Color:
                            rgba: utils.get_color_from_hex(YELLOW)
                        Rectangle:
                            size: self.size
                            pos: self.pos
                    text: "Camera:"
                    font_size: 20
                    size_hint_y: None
                    height: 45
                Label:
                    canvas.before:
                        Color:
                            rgba: utils.get_color_from_hex(YELLOW)
                        Rectangle:
                            size: self.size
                            pos: self.pos
                    id: camera_info
                    text: ""
                    color: utils.get_color_from_hex(BLACK)
                    font_size: 15
                    size_hint_y: None
                    height: 30
                Label:
                    canvas.before:
                        Color:
                            rgba: utils.get_color_from_hex(YELLOW)
                        Rectangle:
                            size: self.size
                            pos: self.pos
                    text: "Microphone:"
                    font_size: 20
                    size_hint_y: None
                    height: 45
                Label:
                    canvas.before:
                        Color:
                            rgba: utils.get_color_from_hex(YELLOW)
                        Rectangle:
                            size: self.size
                            pos: self.pos
                    id: microphone_info
                    text: ""
                    color: utils.get_color_from_hex(BLACK)
                    font_size: 15
                    size_hint_y: None
                    height: 30
                Label:
                    canvas.before:
                        Color:
                            rgba: utils.get_color_from_hex(YELLOW)
                        Rectangle:
                            size: self.size
                            pos: self.pos
                    text: "Speaker:"
                    font_size: 20
                    size_hint_y: None
                    height: 45
                Label:
                    canvas.before:
                        Color:
                            rgba: utils.get_color_from_hex(YELLOW)
                        Rectangle:
                            size: self.size
                            pos: self.pos
                    id: speaker_info
                    text: ""
                    color: utils.get_color_from_hex(BLACK)
                    font_size: 15
                    size_hint_y: None
                    height: 30

                Button:
                    text: "More Info"
                    font_size: 16
                    size_hint_y: None
                    height: 100
                    on_release:
                        root._open_info_popup()

            # 2nd column: Eye Tracking
            GridLayout:
                canvas.before:
                    Color:
                        rgba: 1,1,1,1
                    Rectangle:
                        size: self.size
                        pos: self.pos
                rows: 6 # Add more rows when adding widgets (Label, Button, etc.)
                Label:
                    canvas.before:
                        Color:
                            rgba: utils.get_color_from_hex(BLUE)
                        Rectangle:
                            size: self.size
                            pos: self.pos
                    text: "Eye Tracking"
                    bold: True
                    font_size: 20
                    size_hint_y: None
                    height: 100
                Label:
                    canvas.before:
                        Color:
                            rgba: utils.get_color_from_hex(FOG)
                        Rectangle:
                            size: self.size
                            pos: self.pos
                    text: "Status:"
                    font_size: 20
                    color: utils.get_color_from_hex(BLUE)
                    size_hint_y: None
                    height: 35
                Label:
                    id: eye_status
                    canvas.before:
                        Color:
                            rgba: utils.get_color_from_hex(FOG)
                        Rectangle:
                            size: self.size
                            pos: self.pos
                    text: "OFF"
                    font_size: 25
                    color: utils.get_color_from_hex(RED)
                    size_hint_y: None
                    height: 35
                Label:
                    canvas.before:
                        Color:
                            rgba: utils.get_color_from_hex(GRAY)
                        Rectangle:
                            size: self.size
                            pos: self.pos
                    text: "Cursor Location:"
                    font_size: 20
                    color: utils.get_color_from_hex(BLUE)
                    size_hint_y: None
                    height: 60
                Label:
                    canvas.before:
                        Color:
                            rgba: utils.get_color_from_hex(GRAY)
                        Rectangle:
                            size: self.size
                            pos: self.pos
                    id: cursor_location_label
                    text: root.cursor_position
                    font_size: 32
                    color: (0,0,0,1)
                Button:
                    id: eye_btn
                    background_normal: ''
                    background_color: utils.get_color_from_hex(GREEN)
                    text: "TURN ON"
                    font_size: 30
                    size_hint_y: None
                    height: 100
                    on_release:
                        root._update_button(event="click_eye_btn")

            # 3rd column: Lip Reading
            GridLayout:
                canvas.before:
                    Color:
                        rgba: 1,1,1,1
                    Rectangle:
                        size: self.size
                        pos: self.pos
                rows: 6 # Add more rows when adding widgets (Label, Button, etc.)
                Label:
                    canvas.before:
                        Color:
                            rgba: utils.get_color_from_hex(BLUE)
                        Rectangle:
                            size: self.size
                            pos: self.pos
                    text: "Lip Reading"
                    bold: True
                    font_size: 20
                    size_hint_y: None
                    height: 100
                Label:
                    canvas.before:
                        Color:
                            rgba: utils.get_color_from_hex(FOG)
                        Rectangle:
                            size: self.size
                            pos: self.pos
                    text: "Status:"
                    font_size: 20
                    color: utils.get_color_from_hex(BLUE)
                    size_hint_y: None
                    height: 35
                Label:
                    id: lip_status
                    canvas.before:
                        Color:
                            rgba: utils.get_color_from_hex(FOG)
                        Rectangle:
                            size: self.size
                            pos: self.pos
                    text: "OFF"
                    font_size: 25
                    color: utils.get_color_from_hex(RED)
                    size_hint_y: None
                    height: 35
                Label:
                    canvas.before:
                        Color:
                            rgba: utils.get_color_from_hex(GRAY)
                        Rectangle:
                            size: self.size
                            pos: self.pos
                    text: "Command Log:"
                    font_size: 20
                    color: utils.get_color_from_hex(BLUE)
                    size_hint_y: None
                    height: 60
                ScrollView:
                    do_scroll_x: False
                    do_scroll_y: True
                    size: self.size
                    bar_color: utils.get_color_from_hex(SCROLLBAR)
                    bar_width: 12
                    canvas.before:
                        Color:
                            rgba: utils.get_color_from_hex(GRAY)
                        Rectangle:
                            size: self.size
                            pos: self.pos
                    GridLayout:
                        id: lip_text
                        size_hint_y: None
                        cols: 1
                        height: self.minimum_height
                        width: self.minimum_width
                        row_default_height: '20dp'
                        row_force_default: True
                        spacing: 0, 0
                        padding: 0, 0
                Button:
                    id: lip_btn
                    background_normal: ''
                    background_color: utils.get_color_from_hex(GREEN)
                    text: "RECORD"
                    font_size: 30
                    size_hint_y: None
                    height: 100
                    on_release:
                        root._update_button(event="click_lip_btn")

            # 4th column: Speech Recognition
            GridLayout:
                canvas.before:
                    Color:
                        rgba: 1,1,1,1
                    Rectangle:
                        size: self.size
                        pos: self.pos
                rows: 6 # Add more rows when adding widgets (Label, Button, etc.)
                Label:
                    canvas.before:
                        Color:
                            rgba: utils.get_color_from_hex(BLUE)
                        Rectangle:
                            size: self.size
                            pos: self.pos
                    text: "Speech Recognition"
                    bold: True
                    font_size: 20
                    size_hint_y: None
                    height: 100
                Label:
                    canvas.before:
                        Color:
                            rgba: utils.get_color_from_hex(FOG)
                        Rectangle:
                            size: self.size
                            pos: self.pos
                    text: "Status:"
                    font_size: 20
                    color: utils.get_color_from_hex(BLUE)
                    size_hint_y: None
                    height: 35
                Label:
                    id: audio_status
                    canvas.before:
                        Color:
                            rgba: utils.get_color_from_hex(FOG)
                        Rectangle:
                            size: self.size
                            pos: self.pos
                    text: "OFF"
                    font_size: 25
                    color: utils.get_color_from_hex(RED)
                    size_hint_y: None
                    height: 35
                Label:
                    canvas.before:
                        Color:
                            rgba: utils.get_color_from_hex(GRAY)
                        Rectangle:
                            size: self.size
                            pos: self.pos
                    text: "Command Log:"
                    font_size: 20
                    color: utils.get_color_from_hex(BLUE)
                    size_hint_y: None
                    height: 60
                ScrollView:
                    do_scroll_x: False
                    do_scroll_y: True
                    size: self.size
                    bar_color: utils.get_color_from_hex(SCROLLBAR)
                    bar_width: 12
                    canvas.before:
                        Color:
                            rgba: utils.get_color_from_hex(GRAY)
                        Rectangle:
                            size: self.size
                            pos: self.pos
                    GridLayout:
                        id: audio_text
                        size_hint_y: None
                        cols: 1
                        height: self.minimum_height
                        width: self.minimum_width
                        row_default_height: '20dp'
                        row_force_default: True
                        spacing: 0, 0
                        padding: 0, 0
                Button:
                    id: audio_btn
                    background_normal: ''
                    background_color: utils.get_color_from_hex(GREEN)
                    text: "TURN ON"
                    font_size: 30
                    size_hint_y: None
                    height: 100
                    on_release:
                        root._update_button(event="click_audio_btn")
