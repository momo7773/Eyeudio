#:import utils kivy.utils
#:import WrappedLabel gui

#:set BLUE '#003262'
#:set RED '#ED4E33'
#:set GREEN '#00A598'
#:set FOG '#DDD5C7'
#:set GRAY '#EEEEEE'
#:set YELLOW '#C4820E'

<EyeudioGUI>
    BoxLayout:
        orientation: "horizontal"
        size: root.width, root.height

        GridLayout:
            spacing: 1
            canvas.before:
                Color:
                    rgba: 1,1,1,1
                Rectangle:
                    size: self.size
                    pos: self.pos
            cols: 4
            padding: [1,1,1,1]

            # First column: Info
            GridLayout:
                canvas.before:
                    Color:
                        rgba: 1,1,1,1
                    Rectangle:
                        size: self.size
                        pos: self.pos
                rows: 3 # Add more rows when adding widgets (Label, Button, etc.)
                size_hint_x: None
                width: 150
                Label:
                    canvas.before:
                        Color:
                            rgba: utils.get_color_from_hex(BLUE)
                        Rectangle:
                            size: self.size
                            pos: self.pos
                    text: "Info"
                    bold: True
                    font_size: 20
                    size_hint_y: None
                    height: 100
                Label:
                    canvas.before:
                        Color:
                            rgba: utils.get_color_from_hex(YELLOW)
                        Rectangle:
                            size: self.size
                            pos: self.pos
                    text: "Computer\nCamera\nMicrophone\nSpeaker"
                    font_size: 16
                Button:
                    text: "More Info"
                    font_size: 16
                    size_hint_y: None
                    height: 100
                    on_release:
                        root._open_info_popup()

            # 2nd column: Eye Tracking
            GridLayout:
                canvas.before:
                    Color:
                        rgba: 1,1,1,1
                    Rectangle:
                        size: self.size
                        pos: self.pos
                rows: 6 # Add more rows when adding widgets (Label, Button, etc.)
                Label:
                    canvas.before:
                        Color:
                            rgba: utils.get_color_from_hex(BLUE)
                        Rectangle:
                            size: self.size
                            pos: self.pos
                    text: "Eye Tracking"
                    bold: True
                    font_size: 20
                    size_hint_y: None
                    height: 100
                Label:
                    canvas.before:
                        Color:
                            rgba: utils.get_color_from_hex(FOG)
                        Rectangle:
                            size: self.size
                            pos: self.pos
                    text: "Status:"
                    font_size: 20
                    color: (1,0,0,1)
                    size_hint_y: None
                    height: 35
                Label:
                    id: eye_status
                    canvas.before:
                        Color:
                            rgba: utils.get_color_from_hex(FOG)
                        Rectangle:
                            size: self.size
                            pos: self.pos
                    text: "OFF"
                    font_size: 16
                    color: utils.get_color_from_hex(RED)
                    size_hint_y: None
                    height: 35
                Label:
                    canvas.before:
                        Color:
                            rgba: utils.get_color_from_hex(GRAY)
                        Rectangle:
                            size: self.size
                            pos: self.pos
                    text: "Cursor Location:"
                    font_size: 20
                    color: (1,0,0,1)
                    size_hint_y: None
                    height: 60
                Label:
                    canvas.before:
                        Color:
                            rgba: utils.get_color_from_hex(GRAY)
                        Rectangle:
                            size: self.size
                            pos: self.pos
                    id: cursor_location_label
                    text: root.cursor_position
                    font_size: 32
                    color: (0,0,0,1)
                Button:
                    id: eye_btn
                    background_normal: ''
                    background_color: utils.get_color_from_hex(GREEN)
                    text: "TURN ON"
                    font_size: 30
                    size_hint_y: None
                    height: 100
                    on_release:
                        root._update_button(event="click_eye_btn")

            # 3rd column: Lip Reading
            GridLayout:
                canvas.before:
                    Color:
                        rgba: 1,1,1,1
                    Rectangle:
                        size: self.size
                        pos: self.pos
                rows: 6 # Add more rows when adding widgets (Label, Button, etc.)
                Label:
                    canvas.before:
                        Color:
                            rgba: utils.get_color_from_hex(BLUE)
                        Rectangle:
                            size: self.size
                            pos: self.pos
                    text: "Lip Reading"
                    bold: True
                    font_size: 20
                    size_hint_y: None
                    height: 100
                Label:
                    canvas.before:
                        Color:
                            rgba: utils.get_color_from_hex(FOG)
                        Rectangle:
                            size: self.size
                            pos: self.pos
                    text: "Status:"
                    font_size: 20
                    color: (1,0,0,1)
                    size_hint_y: None
                    height: 35
                Label:
                    id: lip_status
                    canvas.before:
                        Color:
                            rgba: utils.get_color_from_hex(FOG)
                        Rectangle:
                            size: self.size
                            pos: self.pos
                    text: "OFF"
                    font_size: 16
                    color: utils.get_color_from_hex(RED)
                    size_hint_y: None
                    height: 35
                Label:
                    canvas.before:
                        Color:
                            rgba: utils.get_color_from_hex(GRAY)
                        Rectangle:
                            size: self.size
                            pos: self.pos
                    text: "Command Log:"
                    font_size: 20
                    color: (1,0,0,1)
                    size_hint_y: None
                    height: 60
                WrappedLabel:
                    canvas.before:
                        Color:
                            rgba: utils.get_color_from_hex(GRAY)
                        Rectangle:
                            size: self.size
                            pos: self.pos
                    id: lip_text
                    text: ""
                    halign: "center"
                    font_size: 16
                    color: (0,0,0,1)
                Button:
                    id: lip_btn
                    background_normal: ''
                    background_color: utils.get_color_from_hex(GREEN)
                    text: "RECORD"
                    font_size: 30
                    size_hint_y: None
                    height: 100
                    on_release:
                        root._update_button(event="click_lip_btn")

            # 4th column: Speech Recognition
            GridLayout:
                canvas.before:
                    Color:
                        rgba: 1,1,1,1
                    Rectangle:
                        size: self.size
                        pos: self.pos
                rows: 6 # Add more rows when adding widgets (Label, Button, etc.)
                Label:
                    canvas.before:
                        Color:
                            rgba: utils.get_color_from_hex(BLUE)
                        Rectangle:
                            size: self.size
                            pos: self.pos
                    text: "Speech Recognition"
                    bold: True
                    font_size: 20
                    size_hint_y: None
                    height: 100
                Label:
                    canvas.before:
                        Color:
                            rgba: utils.get_color_from_hex(FOG)
                        Rectangle:
                            size: self.size
                            pos: self.pos
                    text: "Status:"
                    font_size: 20
                    color: (1,0,0,1)
                    size_hint_y: None
                    height: 35
                Label:
                    id: audio_status
                    canvas.before:
                        Color:
                            rgba: utils.get_color_from_hex(FOG)
                        Rectangle:
                            size: self.size
                            pos: self.pos
                    text: "OFF"
                    font_size: 16
                    color: utils.get_color_from_hex(RED)
                    size_hint_y: None
                    height: 35
                Label:
                    canvas.before:
                        Color:
                            rgba: utils.get_color_from_hex(GRAY)
                        Rectangle:
                            size: self.size
                            pos: self.pos
                    text: "Command Log:"
                    font_size: 20
                    color: (1,0,0,1)
                    size_hint_y: None
                    height: 60
                WrappedLabel:
                    canvas.before:
                        Color:
                            rgba: utils.get_color_from_hex(GRAY)
                        Rectangle:
                            size: self.size
                            pos: self.pos
                    id: audio_text
                    text: ""
                    halign: "center"
                    font_size: 16
                    color: (0,0,0,1)
                Button:
                    id: audio_btn
                    background_normal: ''
                    background_color: utils.get_color_from_hex(GREEN)
                    text: "TURN ON"
                    font_size: 30
                    size_hint_y: None
                    height: 100
                    on_release:
                        root._update_button(event="click_audio_btn")
